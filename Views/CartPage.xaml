<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoGestApp.Views.CartPage"
             Title="Cart">
    
    <Grid RowDefinitions="*, Auto" Padding="20">
        <!-- Cart Items List -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="15">
                <!-- Header -->
                <VerticalStackLayout Spacing="5" Margin="0,10,0,20">
                    <Label 
                        Text="Your Cart"
                        FontSize="28"
                        FontAttributes="Bold"
                        TextColor="#29AB87"
                        HorizontalOptions="Center" />
                </VerticalStackLayout>
                
                <!-- Empty Cart Message -->
                <VerticalStackLayout IsVisible="false" VerticalOptions="Center" HorizontalOptions="Center" Spacing="20" Margin="0,50,0,0">
                    <Image Source="cart_icon.png" HeightRequest="100" />
                    <Label Text="Your cart is empty" FontSize="20" TextColor="Gray" HorizontalOptions="Center" />
                    <Label Text="Add items from the menu" FontSize="16" TextColor="Gray" HorizontalOptions="Center" />
                    <Button Text="Browse Menu" BackgroundColor="#29AB87" TextColor="White" CornerRadius="20" Margin="0,20,0,0" />
                </VerticalStackLayout>
                
                <!-- Cart Item 1 -->
                <Border StrokeShape="RoundRectangle 10" Padding="15" BackgroundColor="White">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="2,2" Opacity="0.1" Radius="4" />
                    </Border.Shadow>
                    <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto" ColumnSpacing="15">
                        <Image Grid.RowSpan="2" Grid.Column="0" Source="dotnet_bot.png" WidthRequest="60" HeightRequest="60" />
                        
                        <Label Grid.Row="0" Grid.Column="1" Text="Margherita Pizza" FontAttributes="Bold" FontSize="16" />
                        <Label Grid.Row="1" Grid.Column="1" Text="€8.90" TextColor="#29AB87" FontAttributes="Bold" />
                        
                        <HorizontalStackLayout Grid.RowSpan="2" Grid.Column="2" Spacing="10" VerticalOptions="Center">
                            <Button Text="-" WidthRequest="40" HeightRequest="40" BackgroundColor="#f0f0f0" TextColor="Black" CornerRadius="20" FontSize="16" />
                            <Label Text="1" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" />
                            <Button Text="+" WidthRequest="40" HeightRequest="40" BackgroundColor="#29AB87" TextColor="White" CornerRadius="20" FontSize="16" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
                
                <!-- Cart Item 2 -->
                <Border StrokeShape="RoundRectangle 10" Padding="15" BackgroundColor="White">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="2,2" Opacity="0.1" Radius="4" />
                    </Border.Shadow>
                    <Grid ColumnDefinitions="Auto, *, Auto" RowDefinitions="Auto, Auto" ColumnSpacing="15">
                        <Image Grid.RowSpan="2" Grid.Column="0" Source="dotnet_bot.png" WidthRequest="60" HeightRequest="60" />
                        
                        <Label Grid.Row="0" Grid.Column="1" Text="Greek Salad" FontAttributes="Bold" FontSize="16" />
                        <Label Grid.Row="1" Grid.Column="1" Text="€4.90" TextColor="#29AB87" FontAttributes="Bold" />
                        
                        <HorizontalStackLayout Grid.RowSpan="2" Grid.Column="2" Spacing="10" VerticalOptions="Center">
                            <Button Text="-" WidthRequest="40" HeightRequest="40" BackgroundColor="#f0f0f0" TextColor="Black" CornerRadius="20" FontSize="16" />
                            <Label Text="1" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" />
                            <Button Text="+" WidthRequest="40" HeightRequest="40" BackgroundColor="#29AB87" TextColor="White" CornerRadius="20" FontSize="16" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- Checkout Section -->
        <VerticalStackLayout Grid.Row="1" Spacing="15" Padding="0,20,0,0">
            <Border StrokeShape="RoundRectangle 10" Padding="15" BackgroundColor="#f8f8f8">
                <Grid ColumnDefinitions="*, Auto" RowDefinitions="Auto, Auto" RowSpacing="10">
                    <Label Grid.Row="0" Grid.Column="0" Text="Total" FontSize="16" />
                    <Label Grid.Row="0" Grid.Column="1" Text="€13.80" FontAttributes="Bold" FontSize="18" TextColor="#29AB87" />
                </Grid>
            </Border>
            
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Fill">
                <Button Text="Clear Cart" BackgroundColor="#f0f0f0" TextColor="Black" CornerRadius="25" HorizontalOptions="FillAndExpand" />
                <Button Text="Checkout" BackgroundColor="#29AB87" TextColor="White" CornerRadius="25" HorizontalOptions="FillAndExpand" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
