<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RestoGestApp.ViewModels"
             x:Class="RestoGestApp.Views.LoginPage"
             x:DataType="viewmodels:UserViewModel"
             Title="Login"
             Shell.NavBarIsVisible="True"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
            <!-- Header -->
            <VerticalStackLayout Spacing="5" Margin="0,10,0,20">
                <Label
                    Text="TavolioKitchen"
                    FontSize="32"
                    FontAttributes="Bold"
                    TextColor="#FEBE10"
                    HorizontalOptions="Center" />

                <Label
                    Text="Welcome Back"
                    FontSize="22"
                    TextColor="Gray"
                    HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Login Form -->
            <Border StrokeShape="RoundRectangle 10" Padding="20" BackgroundColor="White">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Opacity="0.1" Radius="4" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="20">
                    <Label Text="Login to your account" FontAttributes="Bold" FontSize="18" TextColor="#FEBE10" HorizontalOptions="Center" />

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Username" FontAttributes="Bold" TextColor="Gray" />
                        <Entry Text="{Binding Username}" Placeholder="Enter your username" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" FontAttributes="Bold" TextColor="Gray" />
                        <Entry Text="{Binding Password}" Placeholder="Enter your password" IsPassword="True" />
                    </VerticalStackLayout>

                    <Button Text="Login" 
                            Command="{Binding LoginCommand}" 
                            BackgroundColor="#FEBE10" 
                            TextColor="White" 
                            CornerRadius="25"
                            HeightRequest="50"
                            FontAttributes="Bold" />

                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                </VerticalStackLayout>
            </Border>

            <!-- Signup Link -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Label Text="Don't have an account?" TextColor="Gray" HorizontalOptions="Center" />
                <Button Text="Create Account" 
                        Command="{Binding NavigateToSignupCommand}"
                        BackgroundColor="Transparent" 
                        TextColor="#FEBE10" 
                        BorderColor="#FEBE10"
                        BorderWidth="1"
                        CornerRadius="25"
                        HeightRequest="50"
                        FontAttributes="Bold" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
