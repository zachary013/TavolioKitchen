<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RestoGestApp.ViewModels"
             x:Class="RestoGestApp.Views.ProfilePage"
             x:DataType="viewmodels:UserViewModel"
             Title="Profile">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Header -->
            <VerticalStackLayout Spacing="5" Margin="0,10,0,20">
                <Label
                    Text="My Profile"
                    FontSize="28"
                    FontAttributes="Bold"
                    TextColor="#FEBE10"
                    HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Login Form (shown when not logged in) -->
            <Border StrokeShape="RoundRectangle 10" Padding="20" BackgroundColor="White" IsVisible="{Binding IsLoggedIn, Converter={StaticResource InvertedBoolConverter}}">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Opacity="0.1" Radius="4" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                    <Label Text="Login" FontAttributes="Bold" FontSize="20" TextColor="#FEBE10" HorizontalOptions="Center" />

                    <Entry Placeholder="Username" Text="{Binding Username}" />

                    <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />

                    <Button Text="Login" 
                            Command="{Binding LoginCommand}" 
                            BackgroundColor="#FEBE10" 
                            TextColor="White" 
                            CornerRadius="25" />

                    <Button Text="Create Account" 
                            Command="{Binding NavigateToSignupCommand}"
                            BackgroundColor="Transparent" 
                            TextColor="#FEBE10" 
                            BorderColor="#FEBE10"
                            BorderWidth="1"
                            CornerRadius="25" />
                            
                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                </VerticalStackLayout>
            </Border>

            <!-- User Profile (shown when logged in) -->
            <Border StrokeShape="RoundRectangle 10" Padding="20" BackgroundColor="White" IsVisible="{Binding IsLoggedIn}">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Opacity="0.1" Radius="4" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="15">
                    <Image Source="profile_pic1.jpg" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center" />

                    <Label Text="{Binding CurrentUser.FullName}" FontAttributes="Bold" FontSize="22" HorizontalOptions="Center" />
                    <Label Text="{Binding CurrentUser.Role}" TextColor="Gray" HorizontalOptions="Center" />

                    <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto" RowSpacing="15" ColumnSpacing="15">
                        <Label Grid.Row="0" Grid.Column="0" Text="Username:" FontAttributes="Bold" />
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding CurrentUser.Username}" />

                        <Label Grid.Row="1" Grid.Column="0" Text="Email:" FontAttributes="Bold" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding CurrentUser.Email}" />

                        <Label Grid.Row="2" Grid.Column="0" Text="Phone:" FontAttributes="Bold" />
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding CurrentUser.Phone}" />
                    </Grid>

                    <Button Text="Edit Profile" 
                            Command="{Binding UpdateProfileCommand}" 
                            BackgroundColor="#FEBE10" 
                            TextColor="White" 
                            CornerRadius="25" 
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Border>

            <!-- Order History (shown when logged in) -->
            <VerticalStackLayout IsVisible="{Binding IsLoggedIn}" Spacing="15">
                <Label Text="Order History" FontAttributes="Bold" FontSize="22" Margin="0,10,0,0" />

                <!-- Order Item -->
                <Border StrokeShape="RoundRectangle 10" Padding="15" BackgroundColor="White">
                    <Border.Shadow>
                        <Shadow Brush="Black" Offset="2,2" Opacity="0.1" Radius="4" />
                    </Border.Shadow>
                    <Grid RowDefinitions="Auto, Auto, Auto" RowSpacing="10">
                        <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
                            <Label Grid.Column="0" Text="Order #5678" FontAttributes="Bold" FontSize="18" />
                            <Label Grid.Column="1" Text="Delivered" TextColor="#FEBE10" FontAttributes="Bold" />
                        </Grid>

                        <VerticalStackLayout Grid.Row="1" Spacing="5">
                            <Label Text="Date: April 15, 2025" />
                            <Label Text="Items: 3" />
                            <Label Text="Total: â‚¬24.30" TextColor="#FEBE10" FontAttributes="Bold" />
                        </VerticalStackLayout>

                        <Button Grid.Row="2" Text="View Details" BackgroundColor="#f0f0f0" TextColor="Black" CornerRadius="20" HeightRequest="40" FontSize="14" />
                    </Grid>
                </Border>

                <!-- Logout Button -->
                <Button Text="Logout" 
                        Command="{Binding LogoutCommand}" 
                        BackgroundColor="#f0f0f0" 
                        TextColor="Black" 
                        CornerRadius="25" 
                        Margin="0,10,0,20" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
