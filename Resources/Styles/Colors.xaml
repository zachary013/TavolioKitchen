<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base Brand Colors -->
    <!-- These are the raw color values -->
    <Color x:Key="BrandYellow">#FEBE10</Color>
    <Color x:Key="BrandYellowDark">#E6A800</Color>
    <Color x:Key="BrandYellowLight">#FFCF4D</Color>
    <Color x:Key="BrandBlack">#000000</Color>
    <Color x:Key="BrandWhite">White</Color>
    <Color x:Key="BrandGray">#F5F5F5</Color>
    <Color x:Key="BrandGrayDark">#333333</Color>

    <!-- Semantic Colors -->
    <!-- These map the raw colors to their usage in the app -->
    <Color x:Key="Primary">#FEBE10</Color>
    <Color x:Key="PrimaryDark">#E6A800</Color>
    <Color x:Key="PrimaryLight">#FFCF4D</Color>
    <Color x:Key="Secondary">#F5F5F5</Color>
    <Color x:Key="SecondaryDarkText">#000000</Color>
    <Color x:Key="Tertiary">#000000</Color>

    <!-- Standard Colors -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <!-- Gray Scale -->
    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- UI Element Colors -->
    <Color x:Key="ButtonBackground">#FEBE10</Color>
    <Color x:Key="ButtonText">White</Color>
    <Color x:Key="HeaderText">#FEBE10</Color>
    <Color x:Key="PriceText">#000000</Color>
    <Color x:Key="BorderColor">#FEBE10</Color>
    <Color x:Key="PageBackground">White</Color>
    <Color x:Key="CardBackground">White</Color>
    <Color x:Key="SuccessText">#FEBE10</Color>
    <Color x:Key="WarningText">Orange</Color>
    <Color x:Key="ErrorText">Red</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FEBE10"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#E6A800"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#FFCF4D"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="#000000"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
    <SolidColorBrush x:Key="BlackBrush" Color="#000000"/>

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FEBE10"/>
    <SolidColorBrush x:Key="ButtonTextBrush" Color="White"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#FEBE10"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#FEBE10"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="#E1E1E1"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="#C8C8C8"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="#ACACAC"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="#919191"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="#6E6E6E"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="#404040"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="#212121"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="#141414"/>
</ResourceDictionary>
