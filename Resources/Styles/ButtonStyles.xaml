    <!-- iOS-style Primary Filled Button -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#007AFF" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="Shadow">
            <Shadow Brush="#40000000" Offset="0,1" Radius="3" Opacity="0.2" />
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#007AFF" />
                            <Setter Property="TextColor" Value="White" />
                            <Setter Property="Scale" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#0062CC" />
                            <Setter Property="TextColor" Value="White" />
                            <Setter Property="Scale" Value="0.98" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#80007AFF" />
                            <Setter Property="TextColor" Value="#F5F5F5" />
                            <Setter Property="Opacity" Value="0.7" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

