<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoGestApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="TavolioKitchen logo"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="TavolioKitchen"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                TextColor="#29AB87" />

            <Label
                Text="Modern Restaurant Management"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Modern Restaurant Management"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CounterBtn"
                Text="Get Started"
                SemanticProperties.Hint="Start using the application"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center"
                BackgroundColor="#29AB87"
                TextColor="White" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
