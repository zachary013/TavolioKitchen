<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestoGestApp.MainPage"
             Title="Menu">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">
            <!-- Header -->
            <VerticalStackLayout Spacing="5" Margin="0,10,0,20">
                <Label
                    Text="TavolioKitchen"
                    FontSize="32"
                    FontAttributes="Bold"
                    TextColor="#29AB87"
                    HorizontalOptions="Center" />

                <Label
                    Text="Delicious Food, Delivered"
                    FontSize="18"
                    TextColor="Gray"
                    HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Categories -->
            <Label
                Text="Categories"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="Black" />

            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <HorizontalStackLayout x:Name="CategoriesLayout" Spacing="15" HorizontalOptions="Start">
                    <!-- Categories will be added here dynamically -->
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Menu Items -->
            <Label
                Text="Menu Items"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="Black"
                Margin="0,10,0,0" />

            <VerticalStackLayout x:Name="MenuItemsLayout" Spacing="15">
                <!-- Menu items will be added here dynamically -->
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
